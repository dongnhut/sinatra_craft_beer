
<h2>Create categories</h2>
<form action="/admin/beers/<%= beer.id %>/edit" role="form" method="post">
  <input type="hidden" name="_method" value="PUT">
  <div class="form-group">
    <input type="text" class="form-control" id="name" name="name" value="<%= beer.name %>" placeholder="Name" required>
  </div>
  <div class="form-group">
    <select class="form-control" name="category_id" >
      <option value="0">Choose category beer</option>
      <% categories.each do |category| %>
      <option value="<%= category.id %>" <%= beer.category_id == category.id ? 'selected' : '' %> ><%= category.name %></option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <input type="text" class="form-control" id="manufacturer" name="manufacturer" value="<%= beer.manufacturer %>" placeholder="manufacturer" required>
  </div>
  <div class="form-group">
    <input type="text" class="form-control" id="country" name="country" value="<%= beer.country %>" placeholder="country" required>
  </div>
  <div class="form-group">
    <input type="number" class="form-control" id="price" name="price" value="<%= beer.price %>" placeholder="price" required>
  </div>
  <div class="form-group">
    <textarea class="form-control" type="textarea" id="description" name="description" placeholder="Description" maxlength="140" rows="7"><%= beer.description %></textarea>
  </div>
  <div class="form-group">
    <label for="show">
      <input type="checkbox" value="1" id="show" name="show"> Display show
    </label>
  </div>
  <button type="submit" class="btn btn-primary">Save</button>
</form>
